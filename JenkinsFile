pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/monadimustafa/jen-lab', branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        def dockerImage = docker.build("monadimustafa/docker:${env.BUILD_NUMBER}")
                    }
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        docker.image("monadimustafa/docker:${env.BUILD_NUMBER}").run('--name mon-container -p 8086:8080 -d')
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded! Application running in Docker container.'
        }
        failure {
            echo 'Pipeline failed! Check the logs for more information.'
        }
    }
}
